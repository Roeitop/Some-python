
dis=int(input("enter numb of users"))
card=[]
visa=0
american=0
for i in range(dis):
    x=(input("enter type of card"))

    while x !='visa' and x != 'american' and x !='other':
        x = (input("try again"))
    card.append(x)
    if x=='visa':
        visa+=1
    elif x=='american':
        american+=1

print('visa card',visa/dis*100,'%')
print('american card',american/dis*100,'%')




import random
Fruits = ['Apple', 'Banana', 'Orange']
Vegetables = ['Tomato', 'Cucumber', 'Onion']
fruitsandveg = Fruits+Vegetables
q = random.sample(fruitsandveg,k=2)
count = 0
count2 = 0

for i in q:
    if i in Fruits:
        count=count+1
    else:
        count2=count2+1
    if count==2:
        print("fruits rules")
    elif count2 == 2:
        print("veg rules")
if count != 2 and count2 != 2:
        print ("1 veg 1 fruit")




items={}
sum = 0
prin={}
for g in range(2):
    serial = int(input("enter serial"))
    name = input("enter name")
    price = float(input("enter price"))
    amount = int(input("enter amount"))
    discount = input("enter false or true")
    while discount != "true" and discount != "false":
        discount = input("enter again true/false")
    total = 0
    if amount <= 5 and discount == "true":
            total = price * amount * 0.95 + total

    elif amount < 10 and 5 < amount and discount == "true":
            total = price * amount * 0.9 + total

    elif amount >= 10 and discount == "true":
            total = price * amount * 0.85 + total
    else:
        total=price*amount
    items[serial] = [name, total, price, amount]
    prin[serial]=[ name, total]
    sum = total + sum
print("The sum of the shopping",sum,"\nthe list of items:")
[print(key,value) for key,value in prin.items()]



pandas

import pandas as pd
import matplotlib as mat

data=pd.read_csv('WorkOrders.csv',index_col='WO')

data['totalcost']=(data['LbrHrs']*250)+data['PartsCost']
data.sort_values('totalcost',ascending=False,inplace=True)
data['totalcost'].head()

data.iloc[data['LbrHrs'].argmax(),[1,4]]

pd.pivot_table(data,index='OrderDay',columns='ServiceType',values='totalcost',aggfunc='mean')

a=data.groupby('ServiceType')['Rush'].count()
a.plot(kind='bar',title='numb of order by type')
